{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./api",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "api",
    "node_modules",
    "typings"
  ]
}
